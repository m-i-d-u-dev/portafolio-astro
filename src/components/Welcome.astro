---
interface Props {
  welcomeh3: string;
  parrafo: string;
  
}

const { welcomeh3, parrafo, } = Astro.props;
---

<section class="welcome-section" id="welcome-section">
  <div class="interactive-background" id="interactive-background">
    <div class="welcome-text" id="welcome-text">
      <h3>{welcomeh3}</h3>
      <p>{parrafo}</p>
    </div>
    <div class="welcome-background-1"></div>
    <div class="welcome-background-2"></div>
  </div>
</section>
<style >
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
 }
 .welcome-text{
    display: inline-block;
    position: relative;
    margin: 140px 0 300px 0;
    width: 60%;
    max-width: 500px;
    left: 15%;
    top: 15%;
    background-color: #fff;
    padding: 40px;
    border-radius: 2px;
    z-index: 1;
    box-sizing: border-box;
 }
 .welcome-background-1{
    display: inline-block;
    position: absolute;
    top: 200px;
    left: 0;
    width: 25%;
    max-width: 400px;
    bottom: 60px;
    background-color: #fff;
    background-size: cover;
    background-image: url('/plant.webp');
 }
 .welcome-background-2{
    display: inline-block;
    position: absolute;
    width: 60%;
    max-width: 950px;
    top: 30px;
    right: 60px;
    bottom: 150px;
    background-color: #fff;
    background-size: cover;
    background-image: url('/laptop.webp');
 }
  .welcome-section {
    background: #fffbf8;
    background: linear-gradient(
      180deg,
      rgb(255, 251, 248) 0%,
      rgb(255, 243, 235) 100%
    );
    box-sizing: border-box;
  }
  .interactive-background {
    display: block;
    position: relative;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
  }
  @media screen and (max-width: 1024px) {
    .father {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(var(--card-width), 1fr));
      gap: 1.5rem;
      justify-content: space-between;
    }
  }
</style>
